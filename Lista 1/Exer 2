#include <stdio.h>
#include <stdlib.h>

/*  Thiago Matheus Mendes dos Santos
    Matricula: 04059879
    Turma: 4NMA */

int main(){
    float quantidade;
    float resultado;
    float soma_produtos;
    float soma;
    float salario = 3300; // Sal. Min. = 1.100;
    
    
    printf("Quantidade de produtos vendidos: ");
    scanf("%f", &quantidade);
    
    soma_produtos = quantidade * 10;
    soma = soma_produtos + salario;
    printf("Salario antes do reajuste: %.2f\n", soma);
    
    resultado = soma + (soma * 0.03);
    printf("Salario com o reajuste de +3%% foi de: %.2f\n", resultado);
}
