int main(){
	int joao, ricardo;
	float rodrigo;
	float valor;
	
	printf("Valor a ser pago: ");
	scanf("%f", &valor);
	
	
	joao = valor/3;
	
	ricardo = valor/3;
	
	rodrigo = valor/3;
	
	
	printf("Valor depois da divisao: \n");
	
	printf("Joao vai pagar: %.d\n", joao);
	printf("Ricardo vai pagar: %.d\n", ricardo);
	printf("Rodrigo vai pagar: %.2f\n", rodrigo);
}
